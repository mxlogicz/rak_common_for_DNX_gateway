#!/bin/bash

SCRIPT_COMMON_FILE=/usr/local/rak/shell_script/rak_common.sh
source $SCRIPT_COMMON_FILE

GW_MODEL=`do_get_gw_model`
LORA_SPI=`do_get_lora_spi`
INSTALL_LTE=`do_get_gw_install_lte`
INSTALL_CHIRPSTACK=`do_get_gw_install_chirpstack`

if [ ! -d "/opt/lora-gateway/packet_forwarder" ]; then

    if [ "$INSTALL_LTE" = "1" ]; then
        if [ "$GW_MODEL" = "RAK7243" ] || [ "$GW_MODEL" = "RAK7244" ]; then
			cp /usr/local/rak/lora/rak7243/* /opt/lora-gateway/ -rf
			if [ "$INSTALL_LTE" = "1" ]; then
				cp /usr/local/rak/lora/rak7243/global_conf_i2c /opt/lora-gateway/packet_forwarder/lora_pkt_fwd/global_conf -rf
			else
				cp /usr/local/rak/lora/rak7243/global_conf_uart /opt/lora-gateway/packet_forwarder/lora_pkt_fwd/global_conf -rf
			fi
			
		elif [ "$GW_MODEL" = "RAK7248" ]; then
			cp /usr/local/rak/lora/rak2287/* /opt/lora-gateway/ -rf
			cp /usr/local/rak/lora/rak2287/global_conf_i2c /opt/lora-gateway/packet_forwarder/lora_pkt_fwd/global_conf -rf
		else
			echo "some error."
		fi
    else
		if [ "$GW_MODEL" = "RAK2247" ]; then
            if [ "$LORA_SPI" = "1" ]; then
                cp /usr/local/rak/lora/rak2247_spi/* /opt/lora-gateway/ -rf
            else
                cp /usr/local/rak/lora/rak2247_usb/* /opt/lora-gateway/ -rf
            fi
        elif [ "$GW_MODEL" = "RAK2246" ]; then
            cp /usr/local/rak/lora/rak2246/* /opt/lora-gateway/ -rf
		elif [ "$GW_MODEL" = "RAK7248" ]; then
            cp /usr/local/rak/lora/rak2287/* /opt/lora-gateway/ -rf
			cp /usr/local/rak/lora/rak2287/global_conf_uart /opt/lora-gateway/packet_forwarder/lora_pkt_fwd/global_conf -rf
		elif [ "$GW_MODEL" = "RAK2287" ]; then
			cp /usr/local/rak/lora/rak2287/* /opt/lora-gateway/ -rf
			if [ "$LORA_SPI" = "1" ]; then
				cp /usr/local/rak/lora/rak2287/global_conf_uart /opt/lora-gateway/packet_forwarder/lora_pkt_fwd/global_conf -rf
			else
				cp /usr/local/rak/lora/rak2287/global_conf_usb /opt/lora-gateway/packet_forwarder/lora_pkt_fwd/global_conf -rf
			fi
		elif [ "$GW_MODEL" = "RAK5146" ]; then
			cp /usr/local/rak/lora/rak5146/* /opt/lora-gateway/ -rf
			if [ "$LORA_SPI" = "1" ]; then
				cp /usr/local/rak/lora/rak5146/global_conf_uart /opt/lora-gateway/packet_forwarder/lora_pkt_fwd/global_conf -rf
			else
				cp /usr/local/rak/lora/rak5146/global_conf_usb /opt/lora-gateway/packet_forwarder/lora_pkt_fwd/global_conf -rf
			fi
        else
			cp /usr/local/rak/lora/rak7243/* /opt/lora-gateway/ -rf
            cp /usr/local/rak/lora/rak7243/global_conf_uart /opt/lora-gateway/packet_forwarder/lora_pkt_fwd/global_conf -rf
        fi
    fi

    cp /opt/lora-gateway/packet_forwarder/lora_pkt_fwd/global_conf/global_conf.eu_863_870.json \
	/opt/lora-gateway/packet_forwarder/lora_pkt_fwd/global_conf.json

    if [ $INSTALL_CHIRPSTACK -eq 0 ]; then
        
        exit 0
    fi
    sed -i "s/^.*server_address.*$/\t\"server_address\": \"127.0.0.1\",/" \
	/opt/lora-gateway/packet_forwarder/lora_pkt_fwd/global_conf.json
	
	chmod 755 /opt/lora-gateway/packet_forwarder/lora_pkt_fwd/global_conf.json
fi
